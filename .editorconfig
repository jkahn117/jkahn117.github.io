root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,mjs,cjs,astro}]
indent_style = space
indent_size = 2
quote_type = double

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
